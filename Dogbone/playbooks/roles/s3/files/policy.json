{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "Allow Public Access to All Objects",
            "Effect": "Allow",
            "Principal": "*",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::{{ S3_BUCKET_NAME_DETAIL }}/*"
        },
        {
            "Effect": "Allow",
            "Principal": {
                "AWS": "{{ AWS_S3_PRINCIPLE | mandatory }}"
            },
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::{{ S3_BUCKET_NAME_DETAIL }}",
                "arn:aws:s3:::{{ S3_BUCKET_NAME_DETAIL }}/*"
            ]
        }
    ]
}
